%h1= t("sessions.header")

%p= link_to t("sessions.facebook"), user_omniauth_authorize_path(:facebook)

.session-form
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group
      = f.label :email, t("sessions.email")
      = f.email_field :email, autofocus: true, class: "form-control"

    .form-group
      = f.label :password, t("sessions.password")
      = f.password_field :password, autocomplete: "off", class: "form-control"

    - if devise_mapping.rememberable?
      .form-group
        = f.check_box :remember_me
        = f.label :remember_me, t("sessions.remember_me")

    .form-group
      = f.submit t("sessions.submit"), class: "btn btn-success"
      = button_to t("sessions.cancel"), :back, class: "btn btn-danger"
